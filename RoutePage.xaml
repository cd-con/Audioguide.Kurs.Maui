<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Audioguide.Kurs.Maui.RoutePage"
             Title="{Binding Name}" Loaded="ContentPage_Loaded" Unloaded="ContentPage_Unloaded">
    <StackLayout Padding="10">
        <Image Source="{Binding MapImage}" HeightRequest="300" Aspect="AspectFill" />
        <Button Text="⏯" Clicked="OnPlayAudioClicked" />
    </StackLayout>
</ContentPage>